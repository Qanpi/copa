{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "paths": {
      "@backend/*": [
        "../server/*"
      ],
    },
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
  },
}